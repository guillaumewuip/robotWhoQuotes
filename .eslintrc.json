{
  "extends": "airbnb",
  "env": {
    "browser": "true",
    "es6": true
  },
  "rules": {
    "indent": ["error", 2],
    "one-var": 0,
    "no-multi-spaces": [1, {
      "exceptions": {
        "VariableDeclarator": true
      }
    }],
    "no-console": 0,
    "func-names": 0,
    "prefer-arrow-callback": 0,
    "key-spacing": [1, {
      "beforeColon": false ,
      "align": "value"
    }],
    "new-cap": 0,
    "max-len": ["warn", 80],
    "arrow-parens": ["error", "always"],
    "react/prop-types": 0,
    "react/forbid-prop-types": 0,
    "react/no-multi-comp": 0,
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "ignore",
      "exports": "ignore",
      "functions": "ignore"
    }],
    "arrow-parens": ["error", "always"],
    "no-param-reassign": ["error", {
      "props": false
    }],
    "jsx-a11y/click-events-have-key-events": false,
    "jsx-a11y/interactive-supports-focus": false,
    "react/no-unescaped-entities": false
  }
}

